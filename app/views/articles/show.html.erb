 <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title text-decoration-none"> <%= @article.title %> </h5>
      <p > <%= @article.body %> </p>
    <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-primary' %>
    <%= link_to "Delete", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: 'btn btn-primary' %>
    <%= link_to "Back to Main Page", root_path, class: "btn btn-primary" %>  
    <% if @article.author %>
      <p class="author ml-4 mt-3">Author: <%= link_to @article.author.full_name, author_path(@article.author) %></p>
    <% else %>
      <p class="author ml-4">Author: Unknown</p>
    <% end %> 
    </div>

  </div>


<h2 class="comment mt-4">Comments</h2>
<%= render @article.comments %>

<h4>Add a comment:</h4>
<%= render 'comments/form' %>
